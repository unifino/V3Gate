adduser --gecos GECOS unifino && adduser unifino sudo && apt update && apt upgrade -y && apt install curl npm socat -y && curl https://get.acme.sh | sh && ~/.acme.sh/acme.sh --set-default-ca --server letsencrypt && ~/.acme.sh/acme.sh --register-account -m unifino@protonmail.com && npm install -g nodemon && bash <(curl -Ls https://raw.githubusercontent.com/vaxilu/x-ui/master/install.sh) && echo "alias i='curl icanhazip.com'" >> /home/unifino/.bashrc && echo "alias c='sudo cp /etc/x-ui/x-ui.db ~'" >> /home/unifino/.bashrc && echo "alias m='sudo mv /etc/x-ui/x-ui.db /etc/x-ui/x-ui.db.bak && sudo mv ~/x-ui.db.zero /etc/x-ui/x-ui.db'" >> /home/unifino/.bashrc && echo "alias reboot='sudo reboot'" >> /home/unifino/.bashrc && touch server.js && i=$(curl icanhazip.com) && echo "var http = require('http');let ip = '"$i"';let meta = '<meta http-equiv=\'Refresh\' content=\'0; URL=https://fitored.ir/\' />';http.createServer( function (req, res) {res.writeHead( 200, {'Content-Type': 'text/html'} );res.end( '<head>' + meta + '</head>' );} ).listen(80, ip);console.log('Server running at http://' + ip);" > server.js && nano /etc/ssh/sshd_config && chmod 777 -R /etc/x-ui/